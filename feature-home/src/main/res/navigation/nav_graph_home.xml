<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/nav_graph_home"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.atech.feature_home.presentation.fragment.HomeFragment">

        <argument
            android:name="title"
            android:defaultValue="Home Page"
            app:argType="string" />

        <action
            android:id="@+id/action_homeFragment_to_dialogClassroomDetailFragment"
            app:destination="@id/dialogClassroomDetailFragment" />

    </fragment>

    <fragment
        android:id="@+id/qrScannerFragment"
        android:name="com.atech.feature_home.presentation.fragment.QrScannerFragment"
        android:label="QrScannerFragment" />

    <fragment
        android:id="@+id/qrGeneratorFragment"
        android:name="com.atech.feature_home.presentation.fragment.QrGeneratorFragment"
        android:label="QrGeneratorFragment" />

    <dialog
        android:id="@+id/dialogClassroomDetailFragment"
        android:name="com.atech.feature_home.presentation.fragment.DialogClassroomDetailFragment"
        android:label="DialogClassroomDetailFragment" >

        <argument
            android:name="schedule"
            android:defaultValue="@null"
            app:nullable="true"
            app:argType="com.atech.domain.entities.ClassScheduleModelItem" />

        <action
            android:id="@+id/action_dialogClassroomDetailFragment_to_qrGeneratorFragment"
            app:destination="@id/qrGeneratorFragment" />

        <action
            android:id="@+id/action_dialogClassroomDetailFragment_to_qrScannerFragment"
            app:destination="@id/qrScannerFragment" />

    </dialog>

</navigation>